@model IEnumerable<Miguitas.Web.Data.Entities.User>

@{
    ViewData["Title"] = "Customers";
}

<div class="bg-img-board container" style="padding-bottom:1%">
    <h2 class="text-center">Clientes</h2>

    <p>
        <a asp-action="Register" class="btn btn-success">Crear Nuevo</a>
    </p>
    <table class="table text-light">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        <a asp-action="CustomerOrders" asp-route-id="@item.PhoneNumber" class="btn btn-info">Ver Pedidos</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
