    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/Styles.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link href="~/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    </environment>
</head>
<body class="text-light bg-img-wall" style="margin-bottom:4%">
    <nav class="navbar navbar-expand-lg navbar-light bg-dark navbar-dark">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">
                    <img class="img-thumbnail" width="90" src="~/images/logo3.png" alt="">
                </a>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-light">Inicio</a>
                    </li>
                    <li>
                        <div class="dropdown show nav-item">
                            <a class="nav-link text-light" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Combos
                            </a>
                            <div class="dropdown-menu bg-dark" aria-labelledby="dropdownMenuLink">
                                <a asp-area="" asp-controller="Products" asp-route-id="(cc)" asp-action="Index" class="nav-link text-light">Clasico</a>
                                <a asp-area="" asp-controller="Products" asp-route-id="(ce)" asp-action="Index" class="nav-link text-light">Espacial</a>
                                <a asp-area="" asp-controller="Products" asp-route-id="(cp)" asp-action="Index" class="nav-link text-light">Premium</a>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Products" asp-route-id="(mp)" asp-action="Index" class="nav-link text-light">+10 Personas</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Products" asp-route-id="(op)" asp-action="Index" class="nav-link text-light">+ Productos</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Products" asp-route-id="(pr)" asp-action="Index" class="nav-link text-light">Promos</a>
                    </li>

                </ul>
                <form class="form-inline my-2 my-lg-0">

                    <ul class="nav navbar-nav form-inline">
                        @if (this.User.Identity.IsAuthenticated && !this.User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Orders" asp-action="Create" class="nav-link text-light">Carrito</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Orders" asp-action="Index" class="nav-link text-light">Pedidos</a>
                        </li>
                        @if (!this.User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Home" asp-action="Contact" class="nav-link text-light">Contacto</a>
                            </li>
                        }

                        @*@if (this.User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a asp-area="" asp-controller="Account" asp-action="Customers" class="nav-link text-light">Clientes</a>
            </li>
        }*@
                        <li class="nav-item " style="padding-right:1%">
                            <a href="https://wa.me/5493624651111/">
                                <i class="fa fa-whatsapp fa-2x" style="color:white"></i>
                            </a>
                            <a href="https://www.facebook.com/miguitasresistencia/">
                                <i class="fa fa-facebook-square fa-2x" style="color:white"></i>
                            </a>
                            <a href="https://www.instagram.com/miguitas_resistencia/">
                                <i class="fa fa-instagram fa-2x" style="color:white"></i>
                            </a>
                            <a>  </a>
                            <br />
                        </li>
                        @if (this.User.IsInRole("Admin"))
                        {
                            <li><a asp-area="" asp-controller="Account" asp-action="ChangeUser" class="nav-link text-light bg-orange">@this.User.Identity.Name</a></li>
                            <li><a asp-area="" asp-controller="Account" asp-action="Logout" style="color:#e55d00" class="nav-link">Salir</a></li>
                        }
                        else if (this.User.Identity.IsAuthenticated)
                        {
                            <li><a asp-area="" asp-controller="Account" asp-action="Logout" style="color:#e55d00" class="nav-link">Salir</a></li>
                        }
                        else
                        {
                            <li><a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link text-light bg-orange">Ingresar</a></li>
                        }

                    </ul>

                </form>
            </div>
        </div>
    </nav>

    <div>
        <div class="container body-content bg-img-wframe" style="border: 4px solid #613314; padding-top:2%;padding-left:2%;padding-right:2%; margin-top:2%">
            @RenderBody()

            <footer>
                <h6 class="text-center" style="padding-bottom:0.2%">
                    &copy; 2019 - MiguitasWeb  |  Dev. by: <a style="color:white" href="https://www.linkedin.com/in/hernan-bts/">
                        HernánBts. <i class="fa fa-linkedin-square"></i>
                    </a>
                </h6>
            </footer>
        </div>
    </div>


    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </environment>
