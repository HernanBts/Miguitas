@{
    ViewData["Title"] = "Home Page";
}
    <div class="bg-img-board container" style="padding-bottom:1%">

        <div>
            <img src="~/images/portada.png" style="margin-top:1%; width: 100%; height: 60%; max-height: 80%; height: auto" alt="Image">
        </div>

        <h2 class="text-center">Promociones</h2>

        <div id="myCarousel" class="carousel slide col-lg-12" style="width: 100%; height: 60%; max-height: 80%; height: auto" data-ride="carousel" data-interval="6000">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/images/Sales/Promo1.jpg" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Sandwich</h5>
                            <p>Una bandeja de sandwiches mixto + levite de 600ml por $140 </p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/Sales/Promo5.jpg" alt="Second slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Ensalada</h5>
                            <p>una porcion de ensalada(tomate cherry, huwvo, queso, zanahoria, ruccula y lechuga) + levite de 600ml por $140</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/Sales/Promo4.jpg" alt="Third slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Empanadas</h5>
                            <p>Carne, jamon y queso, caprecce, queso y cebolla. Precio por doc. $280</p>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <br />
        <div class="text-center">
            <div>
                <h1>
                    Sabemos de Sanwiches
                </h1>
            </div>
            <div>
                <p>
